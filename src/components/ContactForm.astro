          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="bg-light-gray dark:bg-gray-900 rounded-2xl p-8 transition-colors duration-300">
        <h3 class="text-2xl font-bold text-teal-dark dark:text-white mb-6 transition-colors duration-300">Envíanos un Mensaje</h3>
        <form id="contact-form" class="space-y-6">
          <!-- Name -->
          <div>
            <label for="name" class="block text-sm font-semibold text-teal-dark dark:text-white mb-2 transition-colors duration-300">
              Nombre Completo *
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 border border-tiffany/30 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-teal-light focus:border-teal-light transition-colors duration-200 bg-white dark:bg-gray-800 dark:text-white"
              placeholder="Tu nombre completo"
            />
          </div>

          <!-- Email -->
          <div>
            <label for="email" class="block text-sm font-semibold text-teal-dark dark:text-white mb-2 transition-colors duration-300">
              Correo Electrónico *
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 border border-tiffany/30 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-teal-light focus:border-teal-light transition-colors duration-200 bg-white dark:bg-gray-800 dark:text-white"
              placeholder="tu@email.com"
            />
          </div>

          <!-- Phone -->
          <div>
            <label for="phone" class="block text-sm font-semibold text-teal-dark dark:text-white mb-2 transition-colors duration-300">
              Teléfono
            </label>
            <input
              type="tel"
              id="phone"
              name="phone"
              class="w-full px-4 py-3 border border-tiffany/30 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-teal-light focus:border-teal-light transition-colors duration-200 bg-white dark:bg-gray-800 dark:text-white"
              placeholder="+1 (555) 123-4567"
            />
          </div>

          <!-- Service Interest -->
          <div>
            <label for="service" class="block text-sm font-semibold text-teal-dark dark:text-white mb-2 transition-colors duration-300">
              Servicio de Interés
            </label>
            <select
              id="service"
              name="service"
              class="w-full px-4 py-3 border border-tiffany/30 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-teal-light focus:border-teal-light transition-colors duration-200 bg-white dark:bg-gray-800 dark:text-white"
            >
              <option value="">Selecciona un servicio</option>
              <option value="smart-home">Hogares Inteligentes</option>
              <option value="business">Soluciones Empresariales</option>
              <option value="cloud">Servicios en la Nube</option>
              <option value="security">Ciberseguridad</option>
              <option value="consulting">Consultoría Tecnológica</option>
              <option value="support">Soporte Técnico</option>
              <option value="other">Otro</option>
            </select>
          </div>

          <!-- Message -->
          <div>
            <label for="message" class="block text-sm font-semibold text-teal-dark dark:text-white mb-2 transition-colors duration-300">
              Mensaje *
            </label>
            <textarea
              id="message"
              name="message"
              rows="5"
              required
              class="w-full px-4 py-3 border border-tiffany/30 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-teal-light focus:border-teal-light transition-colors duration-200 bg-white dark:bg-gray-800 dark:text-white resize-none"
              placeholder="Cuéntanos sobre tu proyecto o necesidades tecnológicas..."
            ></textarea>
          </div>

          <!-- Privacy Policy -->
          <div class="flex items-start space-x-3">
            <input
              type="checkbox"
              id="privacy"
              name="privacy"
              required
              class="mt-1 w-4 h-4 text-teal-dark border-tiffany/30 rounded focus:ring-teal-light"
            />
            <label for="privacy" class="text-sm text-charcoal dark:text-gray-300 transition-colors duration-300">
              Acepto la <a href="/privacidad" class="text-coral hover:text-coral-soft underline">política de privacidad</a> y autorizo el tratamiento de mis datos personales para fines comerciales.
            </label>
          </div>

          <!-- Submit Button -->
          <button
            type="submit"
            class="w-full bg-gradient-to-r from-teal-dark to-teal-light hover:from-teal-light hover:to-teal-dark text-white font-semibold py-4 px-6 rounded-lg transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl"
          >
            <span class="flex items-center justify-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
              </svg>
              Enviar Mensaje
            </span>
          </button>
        </form>

        <!-- Success Message (Hidden by default) -->
        <div id="success-message" class="hidden mt-6 p-4 bg-teal-light/20 dark:bg-teal-dark/20 border border-teal-light dark:border-teal-dark rounded-lg transition-colors duration-300">
          <div class="flex items-center">
            <svg class="w-5 h-5 text-teal-dark dark:text-teal-light mr-2 transition-colors duration-300" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            <p class="text-teal-dark dark:text-teal-light font-semibold transition-colors duration-300">¡Mensaje enviado exitosamente! Te contactaremos pronto.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // Contact form handling
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('contact-form') as HTMLFormElement;
    const successMessage = document.getElementById('success-message');

    if (form && successMessage) {
      form.addEventListener('submit', function(e) {
        e.preventDefault();
        
        // Get form data
        const formData = new FormData(form);
        const data = Object.fromEntries(formData);
        
        // Simulate form submission (replace with actual API call)
        console.log('Form submitted:', data);
        
        // Show success message
        form.style.display = 'none';
        successMessage.classList.remove('hidden');
        
        // Reset form after 5 seconds
        setTimeout(() => {
          form.reset();
          form.style.display = 'block';
          successMessage.classList.add('hidden');
        }, 5000);
      });
    }
  });
</script>